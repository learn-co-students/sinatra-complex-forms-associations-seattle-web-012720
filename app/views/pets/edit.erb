<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
<input type='hidden' id='hidden' name='_method' value='PATCH'>
  <label>New Pet Name:</label>

  <br>
  <input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name">
  <br>

  <p>Select an existing owner or create a new one below.</p>
 
  <h3>Choose An Existing Owner</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked'if owner.id==@pet.owner.id%> ><%= owner.name %> </input><br>
  <% end %>
  <br>

 
  <h3>...or Create a New Owner</h3>
  <label>New Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br><br>
 
  <input type="submit" value="Update Pet">
  
</form>